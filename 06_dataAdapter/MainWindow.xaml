<Window x:Class="_06_dataAdapter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_dataAdapter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Click="Button_Click" Margin="4" MinWidth="100">Fill</Button>
            <Button Click="Button_Click_1" Margin="4" MinWidth="100">Update</Button>
            <TextBox Margin="4" Name="commandText"></TextBox>
        </DockPanel>
        <DataGrid Grid.Row="1" x:Name="dataGrid"></DataGrid>
    </Grid>
</Window>
